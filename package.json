{
  "name": "typescript-node-setup",
  "version": "1.0.0",
  "description": "Node.js project with TypeScript, Express.js, ESLint, Prettier, ts-node, nodemon and package.json environment specific scripts.",
  "main": "index.js",
  "scripts": {
    "local": "nodemon src/server.ts",
    "dev": "npm run build:start",
    "qa": "NODE_ENV=qa npm run build:start",
    "prod": "npm run build",
    "build": "rm -rf dist/ && tsc -p tsconfig.json",
    "build:start": "npm run build && node -r dotenv/config dist/src/server.js",
    "lint:no-fix": "eslint src/**/*.ts",
    "lint": "eslint src/**/*.ts --fix",
    "prettier": "prettier --write .",
    "db-generate": "drizzle-kit generate",
    "db-migrate": "drizzle-kit migrate",
    "db-studio": "drizzle-kit studio"
  },
  "keywords": [
    "Node.js",
    "TypeScript",
    "Express.js",
    "ESLint",
    "Prettier",
    "ts-node",
    "Nodemon",
    "Package.json",
    "Environment-specific scripts",
    "Web development",
    "TypeScript project",
    "Development tools",
    "Code quality",
    "Project essentials",
    "typescript-eslint-setup",
    "environment-specific-scripts",
    "nodejs-typescript-project",
    "typescript-development-tools",
    "nodejs-typescript-code-quality",
    "nodejs-typescript-project-essentials",
    "nodejs-typescript-project-setup",
    "nodejs-typescript-project-boilerplate",
    "typescript-nodemon-setup",
    "typescript-prettier-setup"
  ],
  "author": "oppenheimer",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/node": "^20.10.4",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.30.4",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.39.2",
    "eslint": "^8.56.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "pg": "^8.13.1",
    "prettier": "^3.1.1"
  },
  "engines": {
    "npm": ">=9.5.1",
    "node": ">=18.16.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shubham-sharmas/typescript-node-project"
  }
}
